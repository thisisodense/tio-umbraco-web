@using System.Web.Optimization;
@using Models = TIO.Core.Models
@using Library.Tools
@using Library.Mvc.Extensions;

@inherits  TIO.Mvc.Core.BaseViewPage<TIO.Core.Models.LocationsModel>

@section scripts {
    <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=AIzaSyBGRlN8YlS3_aiGIkVQyquZvTDjEtDVf5Q"></script>
    @Scripts.Render(Models.Constants.Js.Locations)
}

@section styles {
    @Styles.Render(Models.Constants.Css.Locations)
}

@section topImage {
    <img src="@Umbraco.TypedContentAtRoot().FirstOrDefault().GetCropUrl(BannerId, "bannerCrop")" alt="ThisIsOdense" title="ThisIsOdense" class="logo" />
}

@section menu {
    <li class="@Html.IsActive(Url.Action("Recommendations", "Recommendations"))"><a href="@Url.Action("Recommendations", "Recommendations")">@Umbraco.GetDictionaryValue("EVENTS")</a></li>
    <li class="@Html.IsActive(Url.Action("Articles", "Articles"))"><a href="@Url.Action("Articles", "Articles", new { tagId = String.Empty })">@Umbraco.GetDictionaryValue("BLOG")</a></li>
    <li id="places" class="@Html.IsActive(Url.Action("Locations", "Locations"))"><a href="@Url.Action("Locations", "Locations", new { tagId = String.Empty })">@Umbraco.GetDictionaryValue("PLACES")</a></li>
}

@{
    Layout = "~/Views/Layout.cshtml";
}

<nav class="category-picker">
    @foreach (var tag in Model.Tags)
    {
        @Html.ActionLink(tag.Text, "locations", "locations",
               new { tagId = tag.Id, tag = tag.Text.ToSeoUrl() },
               new { @class = "category" })

        if (Model.Tags.Last().GetHashCode() != tag.GetHashCode())
        {
            <text>//</text>
        }
    }
</nav>
<hr />
@Html.DisplayFor(model => model.Locations)
