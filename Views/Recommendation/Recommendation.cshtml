@using Library.Tools;
@using Models = TIO.Core.Models;

@inherits TIO.Mvc.Core.BaseViewPage<Models.RecommendationModel>
@{
    Layout = "~/Views/Layout.cshtml";
    ViewBag.Title = " - " + Model.HeadLine;
}

@section meta {
    <meta property="og:title" content="@Model.HeadLine" />
    <meta property="og:description" content="@Model.SubHeader" />
    <meta property="fb:app_id" content="550180138336430" />
    <meta property="og:url" content="@Url.Action(Models.Constants.Controllers.Recommendation.NAME, Models.Constants.Controllers.Recommendation.Actions.RECOMMENDATION, new { id = Model.Id, name = Model.HeadLine.ToSeoUrl() }, Request.Url.Scheme)" />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <meta property="og:image" content="@(Request.Url.Scheme + System.Uri.SchemeDelimiter + Request.Url.Host + (Request.Url.IsDefaultPort ? "" : ":" + Request.Url.Port) + Model.ImageUrl)" />
        <meta property="og:image:type" content="image/jpeg" />
        <meta property="og:image:width" content="714" />
        <meta property="og:image:height" content="264" />
    }
    <meta property="og:type" content="article" />
}

@section writername {
    @if(false)
    {
        if (Model != null && !Model.IsGuestWriter)
        {
            <span class="writerOfWeek">@Umbraco.GetDictionaryValue("Skrevet af"): </span><a href="@Url.Action(Models.Constants.Controllers.Writer.NAME, Models.Constants.Controllers.Writer.Actions.WRITER, new { id = Model.WriterId, name = Model.WriterName.ToSeoUrl() })"> @Model.WriterName</a>
        }
        else
        {
        <span class="writerOfWeek">@Umbraco.GetDictionaryValue("Ugens gæsteanbefaling er skrevet af"): </span><a target="_blank" href="@Model.WriterUrl"> @Model.WriterName</a>
        }
    }
}

@Html.DisplayForModel()