@using System.Web.Mvc.Html;

@inherits  ThisIsOdense.Mvc.Core.BaseViewPage<ThisIsOdense.Website.Models.RecommendationsModel>

@{
    Layout = "~/Views/Layout.cshtml";
}

@section writername {
    @if (Model.Recommendations.Any())
    {
        if (!Model.HaveGuestWriter)
        {
            <span class="writerOfWeek">@Umbraco.GetDictionaryValue("Ugens skribent er"):</span><a href="@Url.Action("Writer", "Writer", new { id = Model.MainWriterId })"> @Model.MainWriterName</a>
                                                                                                   }
            else
            {
            <span class="writerOfWeek">@Umbraco.GetDictionaryValue("Ugens gæsteanbefaling er skrevet af"): </span><a target="_blank" href="@Model.GuestRecommendation.WriterUrl">@Model.GuestRecommendation.WriterName</a>
        }
    }
}

@Html.DisplayFor(model => model.Recommendations, new { RecommendationModel = Model })