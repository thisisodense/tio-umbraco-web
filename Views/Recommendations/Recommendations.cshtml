@using Library.Tools;
@using Models = TIO.Core.Models;

@inherits  TIO.Mvc.Core.BaseViewPage<TIO.Core.Models.RecommendationsModel>

@{
    Layout = "~/Views/Layout.cshtml";
}

@section writername {
    <p class="writerOfWeek">
        <a href="@Url.Action(Models.Constants.Controllers.Writer.NAME, Models.Constants.Controllers.Writer.Actions.WRITER, new { id = Model.ThisWeeksEditorId, name = Model.ThisWeeksEditorName.ToSeoUrl() })"><img src="@Model.ThisWeeksEdtiorPhoto" class="writerOfWeek"></a>
        @(Site.IsEnglish ? Model.WeekDescriptionEN : Model.WeekDescription)
        <a href="@Url.Action(Models.Constants.Controllers.Writer.NAME, Models.Constants.Controllers.Writer.Actions.WRITER, new { id = Model.ThisWeeksEditorId, name = Model.ThisWeeksEditorName.ToSeoUrl() })">@Model.ThisWeeksEditorName</a>
    </p>
}

@Html.DisplayFor(model => model.Recommendations, new { RecommendationModel = Model })